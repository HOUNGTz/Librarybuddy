<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".modules.pages.UpdatePage">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#22A5B4"
            android:paddingStart="16dp"
            tools:ignore="RtlSymmetry">
            <ImageView
                android:id="@+id/arrow_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow_back_icon"
                android:gravity="center"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/kdam_thmor"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/add_new_book"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="151dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

<!--                    <com.google.android.material.textfield.TextInputLayout-->
<!--                        android:layout_width="207dp"-->
<!--                        android:layout_height="match_parent">-->

<!--                        <com.google.android.material.textfield.TextInputEditText-->
<!--                            android:layout_width="195dp"-->
<!--                            android:layout_height="55dp"-->
<!--                            android:layout_marginStart="10dp"-->
<!--                            android:hint="@string/book_title"-->
<!--                            app:hintEnabled="true"/>-->

<!--                    </com.google.android.material.textfield.TextInputLayout>-->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="195dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@color/form_color"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="195dp"
                                android:layout_height="55dp"
                                android:hint="@string/book_title"
                                app:hintEnabled="true"
                                />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:background="@color/form_color">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="180dp"
                                android:layout_height="55dp"
                                android:hint="@string/category"
                                android:drawableEnd="@mipmap/chevron_down_icon"/>
                        </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/form_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="389dp"
                        android:layout_height="55dp"
                        android:hint="@string/books_subtitle" />
                </com.google.android.material.textfield.TextInputLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/form_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="389dp"
                        android:layout_height="55dp"
                        android:hint="@string/browes_image" />
                </com.google.android.material.textfield.TextInputLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/form_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="389dp"
                        android:layout_height="55dp"
                        android:hint="@string/rating_books" />
                </com.google.android.material.textfield.TextInputLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/form_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="389dp"
                        android:layout_height="55dp"
                        android:hint="@string/description" />
                </com.google.android.material.textfield.TextInputLayout>
            </TableRow>

<!--            <TableRow-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_marginTop="10dp">-->

<!--                <com.google.android.material.textfield.TextInputLayout-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content">-->

<!--                    <com.google.android.material.textfield.TextInputEditText-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="142dp"-->
<!--                        android:layout_marginStart="10dp"-->
<!--                        android:hint="@string/story" />-->
<!--                </com.google.android.material.textfield.TextInputLayout>-->
<!--            </TableRow>-->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/form_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="389dp"
                        android:layout_height="142dp"
                        android:hint="@string/story" />
                </com.google.android.material.textfield.TextInputLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp">

                <Button
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Save" />
            </TableRow>
        </TableLayout>

    </com.google.android.material.appbar.AppBarLayout>
</LinearLayout>