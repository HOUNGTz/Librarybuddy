                    <!--                            android:layout_height="55dp"-->
                    <!--                            android:layout_marginStart="10dp"-->
                    <!--                            android:hint="@string/book_title"-->
                    <!--                            app:hintEnabled="true"/>-->

                    <!--                    </com.google.android.material.textfield.TextInputLayout>-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="195dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/form_color"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="195dp"
                            android:layout_height="55dp"
                            android:hint="@string/book_title"
                            app:hintEnabled="true"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:background="@color/form_color">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="180dp"
                            android:layout_height="55dp"
                            android:hint="@string/category"
                            android:drawableEnd="@mipmap/chevron_down_icon"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/form_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="389dp"
                        android:layout_height="55dp"
                        android:hint="@string/books_subtitle" />
                </com.google.android.material.textfield.TextInputLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/form_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="389dp"
                        android:layout_height="55dp"
                        android:hint="@string/browes_image" />
                </com.google.android.material.textfield.TextInputLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/form_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="389dp"
                        android:layout_height="55dp"
                        android:hint="@string/rating_books" />
                </com.google.android.material.textfield.TextInputLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/form_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="389dp"
                        android:layout_height="55dp"
                        android:hint="@string/description" />
                </com.google.android.material.textfield.TextInputLayout>
            </TableRow>

            <!--            <TableRow-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:layout_marginTop="10dp">-->

            <!--                <com.google.android.material.textfield.TextInputLayout-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="wrap_content">-->

            <!--                    <com.google.android.material.textfield.TextInputEditText-->
            <!--                        android:layout_width="match_parent"-->
            <!--                        android:layout_height="142dp"-->
            <!--                        android:layout_marginStart="10dp"-->
            <!--                        android:hint="@string/story" />-->
            <!--                </com.google.android.material.textfield.TextInputLayout>-->
            <!--            </TableRow>-->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/form_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="389dp"
                        android:layout_height="142dp"
                        android:hint="@string/story" />
                </com.google.android.material.textfield.TextInputLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp">

                <Button
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/button_update" />
            </TableRow>
        </TableLayout>

    </com.google.android.material.appbar.AppBarLayout>
</LinearLayout>