<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.screens.LoginScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/book_lover_"
            android:layout_width="295dp"
            android:layout_height="218dp"
            android:layout_marginStart="43dp"
            android:layout_marginTop="106dp"
            android:background="@drawable/image_login" />

        <TextView
            android:id="@+id/sign_up_pag"
            android:layout_width="320dp"
            android:layout_height="113dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="23dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="top"
            android:shadowColor="#424040"
            android:shadowDx="7"
            android:shadowDy="7"
            android:shadowRadius="10"
            android:text="Sign in"
            android:textAppearance="@style/sign_up_pag"
            android:textColor="#22a1b5"
            android:textColorHighlight="#009688"
            android:textSize="48sp" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="378dp"
            android:layout_height="56dp"
            android:layout_margin="10dp"
            android:hint="Email"
            android:ems="10"
            android:inputType="textEmailAddress"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>