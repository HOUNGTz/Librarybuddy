<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".modules.pages.SearchPage">

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="227dp"
        android:background="@drawable/bg_main_search"
        tools:ignore="VisualLintBounds" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-150dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="sans-serif-medium"
        android:shadowColor="#403F3F"
        android:shadowDx="4"
        android:shadowDy="10"
        android:shadowRadius="3"
        android:text="@string/librarybuddy1"
        android:textAlignment="center"
        android:textColor="#5D4037"
        android:textSize="34sp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/search_textfield"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_margin="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_search"
        android:drawableStart="@mipmap/search"
        android:drawablePadding="10dp"
        android:hint="Search..."
        android:paddingStart="10dp"
        android:textAlignment="viewStart"
        android:textColorHint="#0097A7"
        tools:ignore="HardcodedText,RtlSymmetry,TextContrastCheck,VisualLintTextFieldSize" />

    <ListView
        android:id="@+id/simpleListView"
        android:layout_width="match_parent"
        android:layout_height="547dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        tools:ignore="VisualLintBounds" />
</LinearLayout>