<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.pages.SearchPage"
    tools:layout_editor_absoluteY="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="413dp"
            android:layout_height="306dp"
            android:orientation="vertical"
            tools:ignore="MissingConstraints,VisualLintBounds">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="227dp"
                    android:background="@drawable/bg_main_search"
                    tools:ignore="VisualLintBounds" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:shadowColor="#403F3F"
                    android:shadowDx="4"
                    android:shadowDy="10"
                    android:shadowRadius="3"
                    android:text="Librarybuddy"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="34sp"
                    tools:layout_editor_absoluteY="79dp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/search_textfield"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/bg_search"
                    android:drawableStart="@mipmap/search"
                    android:drawablePadding="10dp"
                    android:hint="Search..."
                    android:paddingStart="10dp"
                    android:textAlignment="viewStart"
                    android:textColorHint="#0097A7"
                    tools:ignore="HardcodedText,RtlSymmetry,TextContrastCheck"
                    tools:layout_editor_absoluteX="24dp"
                    tools:layout_editor_absoluteY="194dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ListView
                android:id="@+id/simpleListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>