<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#22A5B4">

        <TextView
            android:id="@+id/title"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/kdam_thmor"
            android:gravity="center"
            android:text="@string/library_buddy"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="234dp"
                    android:src="@drawable/lirbrary_buddy" />

                <Button
                    android:id="@+id/buttonStudyNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="160dp"
                    android:layout_marginBottom="0dp"
                    android:fontFamily="@font/kdam_thmor"
                    android:background="@drawable/button_background"
                    android:text="@string/study_now"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/tvNewBook"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/quick"
                    android:text="@string/new_book"
                    android:textAlignment="viewStart"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvSeeAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:fontFamily="@font/quick"
                    android:text="@string/see_all"
                    android:textAlignment="viewEnd"
                    android:textSize="16sp"/>
            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:columnCount="3"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false">

            <ImageView
                android:id="@+id/grid_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="24dp"
                android:layout_row="0"
                android:layout_column="0"
                android:src="@drawable/librarybuddy" />

            <ImageView
                android:id="@+id/grid_image1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_row="0"
                android:layout_column="1"
                android:src="@drawable/librarybuddy" />

            <!-- Third Image -->
            <ImageView
                android:id="@+id/grid_image2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="36dp"
                android:layout_row="0"
                android:layout_column="2"
                android:src="@drawable/librarybuddy" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:layout_row="1"
                android:layout_column="0"
                android:src="@drawable/librarybuddy" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:src="@drawable/librarybuddy" />

                <!-- Third Image -->
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="16dp"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:src="@drawable/librarybuddy" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:src="@drawable/librarybuddy" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:src="@drawable/librarybuddy" />

                <!-- Third Image -->
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="16dp"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:src="@drawable/librarybuddy" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:src="@drawable/librarybuddy" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:src="@drawable/librarybuddy" />

                <!-- Third Image -->
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="16dp"
                    android:layout_row="3"
                    android:layout_column="2"
                    android:src="@drawable/librarybuddy" />

            </GridLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
